<!-- Validation failure messages -->
<% if @important_date.errors.any? %>
  <% @important_date.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3><%= @important_date.friend.name %>'s <%= @important_date.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_important_date/<%= @important_date.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <input type="hidden" name="friend_id" value="<%= @important_date.friend_id %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @important_date.name %>">
      </div>
      
      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @important_date.date %>">
      </div>


      <!-- Label and input for reminder -->
      <div class="form-group">
        <label for="reminder" class="control-label">
          Reminder
        </label>

        <input type="text" id="reminder" name="reminder" placeholder="Reminder" class="form-control" value="<%= @important_date.reminder %>">
      </div>

      <!-- Label and input for card -->
      <div class="checkbox">
        <label for="card">
          <input type="checkbox" id="card" name="card" value="1" <%= "checked" if @important_date.card %>>
          Card
        </label>
      </div>

      <!-- Label and input for traditions -->
      <div class="form-group">
        <label for="traditions" class="control-label">
          Traditions
        </label>

        <input type="text" id="traditions" name="traditions" placeholder="Traditions" class="form-control" value="<%= @important_date.traditions %>">
      </div>

      <button class="btn btn-warning">
        Update Important Date
      </button>
      or
      <a href="/important_dates/<%= @important_date.id %>">Cancel</a>
    </form>
  </div>
</div>
