<div class="page-header">
  <h1>
    Important dates
    <a href="/important_dates/new" class="btn btn-lg btn-success">New Important date</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Reminder</th>
        <th>Friend</th>
        <th>Card</th>
        <th>Previous gifts</th>
        <th>Traditions</th>
        <th>Name</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @important_dates.each do |important_date| %>
      <tr>
        <td><%= important_date.reminder %></td>
        <td><%= important_date.friend_id %></td>
        <td><%= important_date.card %></td>
        <td><%= important_date.previous_gifts %></td>
        <td><%= important_date.traditions %></td>
        <td><%= important_date.name %></td>
        <td><%= important_date.date %></td>
        <td>
          <a href="/important_dates/<%= important_date.id %>" class="btn btn-primary">Show</a>
          <a href="/important_dates/<%= important_date.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_important_date/<%= important_date.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
