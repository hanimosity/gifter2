<div class="page-header">
  <h1>
    Friends
    <a href="/friends/new" class="btn btn-lg btn-success">New Friend</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Face</th>
        <th>Name</th>
        <th>Likes</th>
        <th>Dislikes</th>
        <th>Actions</th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>

        <td><img class="img-responsive friend-index-photo" src="<%= friend.photo %>"></td>
        <td><%= friend.name %></td>
        <td><%= friend.likes %></td>
        <td><%= friend.dislikes %></td>
        <td>
          <a href="/friends/<%= friend.id %>" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i></a>
          <a href="/friends/<%= friend.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a>
          <a href="/delete_friend/<%= friend.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
