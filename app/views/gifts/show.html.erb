<div class="page-header">
  <h3>Gift #<%= @gift.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Important date</dt>
      <dd><%= @gift.important_date_id %></dd>

      <dt>Friends holiday</dt>
      <dd><%= @gift.friends_holiday_id %></dd>

      <dt>Year given</dt>
      <dd><%= @gift.year_given %></dd>

      <dt>Description</dt>
      <dd><%= @gift.description %></dd>

      <dt>Name</dt>
      <dd><%= @gift.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/gifts" class="btn btn-primary">
        Back
      </a>
      <a href="/gifts/<%= @gift.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_gift/<%= @gift.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
