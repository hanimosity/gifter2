<div class="page-header">
  <h1>
    Gifts
    <a href="/gifts/new" class="btn btn-lg btn-success">New Gift</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Important date</th>
        <th>Friends holiday</th>
        <th>Year given</th>
        <th>Description</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @gifts.each do |gift| %>
      <tr>
        <td><%= gift.important_date_id %></td>
        <td><%= gift.friends_holiday_id %></td>
        <td><%= gift.year_given %></td>
        <td><%= gift.description %></td>
        <td><%= gift.name %></td>
        <td>
          <a href="/gifts/<%= gift.id %>" class="btn btn-primary">Show</a>
          <a href="/gifts/<%= gift.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_gift/<%= gift.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
