<div class="page-header">
  <h1>
    Holidays
    <a href="/holidays/new" class="btn btn-lg btn-success">New Holiday</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Traditions</th>
        <th>Actions</th>
      </tr>

      <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.name %></td>
        <td><%= holiday.date %></td>
        <td><%= holiday.traditions %></td>
        <td>
          <a href="/holidays/<%= holiday.id %>" class="btn btn-primary">Show</a>
          <a href="/holidays/<%= holiday.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_holiday/<%= holiday.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
